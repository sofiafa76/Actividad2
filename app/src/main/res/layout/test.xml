<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBDBBA">

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titulo"
        android:text="CAPITAL DE"
        android:textAlignment="center"
        android:textColor="#C75844"
        android:textSize="55sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/paisText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/titulo"
        android:text="PAIS"
        android:textAlignment="center"
        android:textColor="#C75844"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/siguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/next" />

    <RadioButton
        android:id="@+id/r1"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/subt"
        android:text="CAPITAL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fondo" />

    <RadioButton
        android:id="@+id/r2"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/subt"
        android:text="CAPITAL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r1" />

    <RadioButton
        android:id="@+id/r3"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/subt"
        android:text="CAPITAL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r2" />

    <RadioButton
        android:id="@+id/r4"
        android:layout_width="230dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/subt"
        android:text="CAPITAL"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/r3" />

    <ImageView
        android:id="@+id/fondo"
        android:layout_width="374dp"
        android:layout_height="472dp"
        android:alpha="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mapamundi" />

</androidx.constraintlayout.widget.ConstraintLayout>